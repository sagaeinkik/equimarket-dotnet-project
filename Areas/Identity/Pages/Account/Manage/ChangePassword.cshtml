@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Ändra lösenord";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h2>@ViewData["Title"]</h2>

<form id="change-password-form" method="post">
    <div asp-validation-summary="ModelOnly" role="alert"></div>
    <div>
        <input asp-for="Input.OldPassword" aria-required="true" placeholder="Ange ditt gamla lösenord" />
        <label asp-for="Input.OldPassword" class="form-label"></label>
        <span asp-validation-for="Input.OldPassword"></span>
    </div>
    <div>
        <input asp-for="Input.NewPassword" aria-required="true" placeholder="Ange ditt nya lösenord" />
        <label asp-for="Input.NewPassword" class="form-label"></label>
        <span asp-validation-for="Input.NewPassword"></span>
    </div>
    <div>
        <input asp-for="Input.ConfirmPassword" aria-required="true" placeholder="Bekräfta nytt lösenord" />
        <label asp-for="Input.ConfirmPassword" class="form-label"></label>
        <span asp-validation-for="Input.ConfirmPassword"></span>
    </div>
    <button type="submit">Uppdatera lösenord</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
