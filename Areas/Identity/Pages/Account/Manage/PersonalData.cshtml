@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-6">
        <p>Ditt konto innehåller personlig data. Du kan ladda ner denna data här.</p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post">
            <button class="btn btn-primary" type="submit">Ladda ned</button>
        </form>
        <p>
            Du kan även radera din data. Observera att vid borttagning av din data tas även ditt konto bort permanent.
            Detta kan inte ångras.
        </p>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger">Radera persondata</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
