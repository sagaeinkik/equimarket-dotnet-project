@page
@model LogoutModel
@{
    ViewData["Title"] = "Logga ut";
}

<header>
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })"
                method="post">
                <button type="submit">Tryck här för att logga ut</button>
            </form>
        }
        else
        {
            <p>Du har blivit utloggad!</p>
        }
    }
</header>
