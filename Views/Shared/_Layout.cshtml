<!DOCTYPE html>
<html lang="sv">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EquiMarket</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    @* Google Fonts *@
    <link
        href="https://fonts.googleapis.com/css2?family=Telex&family=Tomorrow:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
        rel="stylesheet">
</head>

<body>
    <header>
        <div class="header-content-wrapper">

            <a asp-area="" asp-controller="Home" asp-action="Index" class="logo"><span>Equi</span>
                <img src="/images/horses/website-images/horsehead.svg" alt="">
                <span>Market</span></a>
            <nav class="desktop">
                <ul>
                    <li>
                        <a asp-area="" asp-controller="Horse" asp-action="Index">Annonser</a>
                    </li>
                    <partial name="_LoginPartial" />
                </ul>
            </nav>
            <div class="mobile">

                <button class="burger">
                    <span></span>
                    <span></span>
                    <span></span>
                </button>
                <nav class="mobile-nav">
                    <ul>
                        <li>
                            <a asp-area="" asp-controller="Horse" asp-action="Index">Annonser</a>
                        </li>
                        <partial name="_LoginPartial" />
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer>
        <p>
            &copy; 2025 - EquiMarket
        </p>
        <p>Gjord av Saga Einarsdotter Kikajon på Mittuniversitetet</p>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>

@section Scripts {
    @RenderSection("Scripts", required: false)
}

@* JavaScript hamburgermeny *@
<script>
    const burger = document.querySelector('.burger');
    const mobileNav = document.querySelector('.mobile-nav');

    burger.addEventListener('click', () => {
        burger.classList.toggle('active');
        mobileNav.classList.toggle('active');
    });
</script>